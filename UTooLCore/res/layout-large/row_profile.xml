<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:longClickable="true" >


    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="45dp"
        android:layout_height="55dp"
        android:layout_alignBottom="@+id/profileName"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:longClickable="true" />


    <TextView
        android:id="@+id/profileName"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/profilePortrait"
        android:layout_weight="0.75"
        android:contentDescription="@string/profileName"
        android:longClickable="true"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="40sp" />

    <ImageView
        android:id="@+id/profilePortrait"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignBottom="@+id/radioButton"
        android:layout_marginRight="10dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/radioButton"
        android:contentDescription="@string/profilePortrait"
        android:gravity="center"
        android:longClickable="true" />

</RelativeLayout>