<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

	<!-- THIS FILE IS NO LONGER NEEDED, IT IS ONLY USED BY A DEPRECATED CLASS -->
    
    <TextView
        android:id="@+id/playerLabel"
        android:layout_width="196sp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/playerPortrait"
        android:layout_alignParentTop="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="36sp" />

    <ImageView
        android:id="@+id/playerPortrait"
        android:layout_width="64sp"
        android:layout_height="64sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/playerLabel"
        android:contentDescription="@string/profileImageText"
        android:background="@drawable/ic_camera_button" />



    <ImageButton
        android:id="@+id/removePlayerButton"
        android:layout_width="64sp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/playerPortrait"
        android:layout_toRightOf="@+id/playerPortrait"
        android:background="@drawable/red_x"
        android:contentDescription="@string/removeButtonText" />

</RelativeLayout>